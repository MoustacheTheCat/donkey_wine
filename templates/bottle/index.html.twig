{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}


<div class="container-fluid">
    <div>
        <div>
            <h1>{{ page_title }}</h1>
        </div>
    </div>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>year</th>
                    <th>Wine Maker</th>
                    <th>Country</th>
                    <th>Show</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {% for bottle in bottles %}
                    <tr>
                        <th> {{bottle.bottleName}}</th>
                        <th>{{bottle.bottleType}}</th>
                        <th> {{bottle.bottleYear}}</th>
                        <th>{{bottle.wineMaker}}</th>
                        <th> {{bottle.country}}</th>
                       
                        <th>
                            <a href="{{ path('app_bottle_show', {'id': bottle.id}) }}" class="btn btn-dark">Show</a>
                        </th>
                        <th>
                            <a href="{{ path('app_bottle_edit', {'id': bottle.id}) }}" class="btn btn-dark">Edit</a>
                        </th>
                        <th>
                            {{ include('bottle/_delete_form.html.twig') }}
                        </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    <div>
        <a href="{{ path('app_bottle_new') }}" class="btn btn-dark">Add bottle</a>
    </div>
    <div>
         <a href="{{ path('app_storage_index') }}" class="btn btn-dark">List of Storage</a>
    </div>
</div>
{% endblock %}
