{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}


<div class="container-fluid">
    <div>
        <div>
            <h1>{{ page_title }}</h1>
        </div>
    </div>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Parent</th>
                    <th>Show</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {% for storage in storages %}
                    <tr>
                        <th> {{storage.storageName}}</th>
                        <th>
                            {% if storage.parent %}
                            {{ storage.parent.storageName }}
                            {% else %}
                                CAVE
                            {% endif %}
                        </th>
                        <th>
                            <a href="{{ path('app_storage_show', {'id': storage.id}) }}" class="btn btn-dark">Show</a>
                        </th>
                        <th>
                            <a href="{{ path('app_storage_edit', {'id': storage.id}) }}" class="btn btn-dark">Edit</a>
                        </th>
                        <th>
                            {{ include('storage/_delete_form.html.twig') }}
                        </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    <div>
        <a href="{{ path('app_storage_new') }}" class="btn btn-dark">Add Storage</a>
    </div>
    <div>
         <a href="{{ path('app_bottle_index') }}" class="btn btn-dark">List of Bottle</a>
    </div>
</div>
{% endblock %}
